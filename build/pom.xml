                            </dependency>
                            <dependency>
                                <groupId>rhino</groupId>
                                <artifactId>js</artifactId>
                                <version>${version.rhino.js}</version>
                            </dependency>
                        </dependencies>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

